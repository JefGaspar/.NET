@model EM.BL.Domain.Event

@{
    ViewData["Title"] = "Add Event";
}

<h2 class="mb-4 text-center">Add Event</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Add" method="post" class="p-4 border rounded shadow-sm">
                <div class="form-group row mb-3">
                    <label asp-for="EventName" class="col-sm-4 col-form-label text-sm-start">Event Name</label>
                    <div class="col-sm-8">
                        <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="EventDate" class="col-sm-4 col-form-label text-sm-start">Date</label>
                    <div class="col-sm-8">
                        <input asp-for="EventDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="TicketPrice" class="col-sm-4 col-form-label text-sm-start">Ticket Price</label>
                    <div class="col-sm-8">
                        <input asp-for="TicketPrice" class="form-control" placeholder="Enter ticket price" />
                        <span asp-validation-for="TicketPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="EventDescription" class="col-sm-4 col-form-label text-sm-start">Description</label>
                    <div class="col-sm-8">
                        <textarea asp-for="EventDescription" class="form-control" placeholder="Enter event description"></textarea>
                        <span asp-validation-for="EventDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-4">
                    <label asp-for="Category" class="col-sm-4 col-form-label text-sm-start">Category</label>
                    <div class="col-sm-8">
                        <select asp-for="Category" asp-items="Html.GetEnumSelectList<EM.BL.Domain.EventCategory>()" class="form-control">
                            <option value="">-- Select a category --</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-5">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
